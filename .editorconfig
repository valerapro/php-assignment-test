# See editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_style = tab

[*.{yaml,yml}]
trim_trailing_whitespace = false

[*.conf.template]
indent_size = 2

[{docker-compose.yml, docker-compose.build.yml}]
indent_size = 2

[Dockerfile*]
indent_style = tab
